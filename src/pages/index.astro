---
import Layout from "../layouts/Layout.astro";
import Quote from "../components/content/quote";
import BlogList from "../components/blog/blogList.astro";
import Profile from "../components/profile/profile.astro";
import PersonalDescription from "../components/content/personalDescription.astro";
import ProjectList from "../components/content/projectList.astro";
---

<Layout title="Bence R.">
    <div
        class="mx-auto min-h-screen max-w-screen-xl px-6 py-12 font-sans md:px-12 md:py-20 lg:flex lg:justify-between lg:gap-4 lg:px-24 lg:py-0"
    >
        <Profile />

        <main class="pt-8 lg:w-1/2 lg:py-24">
            <Quote client:load />

            <PersonalDescription />

            <ProjectList />

            <span class="-mx-8 block w-screen text-center lg:hidden">
                Made with ❤️ using
                <a href="https://astro.build" target="_blank">Astro</a>.
            </span>
        </main>
    </div>
</Layout>

<style>
    a {
        @apply cursor-pointer font-mono text-white transition-colors duration-200 hover:text-sky-400;
    }
</style>
