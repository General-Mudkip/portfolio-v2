---
import Age from "./age.astro";
import CurrentlyReading from "./currentlyReading.astro";
import Social from "./social.astro";
---

<header
    class="flex flex-col justify-between lg:sticky lg:top-0 lg:flex lg:max-h-screen lg:w-1/2 lg:flex-col lg:py-24"
>
    <div>
        <h1
            class="text-5xl font-bold tracking-tight text-slate-200 sm:text-6xl"
        >
            Bence R.
        </h1>
        <h2
            class="mt-2 text-lg font-medium tracking-tight text-slate-200 sm:text-xl"
        >
            An <Age /> year-old developer.
        </h2>
        <p class="mt-3 max-w-xs leading-normal">
            I try to build open-source sites that are easy to use, accessible,
            and fast.
        </p>

        <hr class="my-6 h-[2px] border-0 bg-slate-700 lg:w-4/5" />

        <ul class="flex flex-col gap-2">
            <Social
                name="General-Mudkip"
                href="https://github.com/General-Mudkip"
                icon="Github"
            />
            <Social
                name="general.mudkip"
                href="https://discord.com/users/567665494518267904"
                icon="Discord"
            />
            <Social
                name="@GeneralMudkip"
                href="https://www.youtube.com/watch?v=dQw4w9WgXcQ"
                icon="Twitter"
            />
        </ul>

        <hr class="my-6 h-[2px] border-0 bg-slate-700 lg:hidden" />
    </div>

